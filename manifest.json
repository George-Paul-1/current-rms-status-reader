{
    "name": "Current Status Reader",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://hirefrequencies.current-rms.com/*"
            ]
        }
    ],
    "action": {
        "default_popup": "status.html",
        "default_icon": "icon.png"
    }
}
